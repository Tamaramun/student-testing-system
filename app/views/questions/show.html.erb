<h1>Question</h1>
<%= @question.question %>

<h1>Answers</h1>
<%= link_to 'New answer', new_test_question_answer_path(@test, @question) %>

<table class="table table-striped">
  <tr>
    <th>#</th>
    <th>Answer</th>
    <th>Is correct</th>
    <th>Actions</th>
  </tr>

  <% counter = 0%>
  <% @answers.each do |answer| %>
  <tr>
    <td><%= counter += 1 %></td>
    <td><%= answer.content %></td>
    <td>
      <div>
        <label>
          <% if answer.is_correct? %>
              <input type="radio" checked="checked">
          <% else %>
              <input type="radio" disabled="disabled" %>
          <% end %>
        </label>
      </div>
    </td>
    <td>
      <%= link_to 'Edit', edit_test_question_answer_path(@test, @question, answer) %>
      <%= link_to 'Remove', answers_destroy_path(@test, @question, answer),
                  method: :delete,
                  data: {confirm: 'Вы точно хотите удалить этот тест?'}
      %></td>
  </tr>
  <% end %>
</table>